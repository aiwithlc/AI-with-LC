from flask import Flask, request, jsonify
from flask_cors import CORS
import ollama  # ✅ Using Ollama only

app = Flask(__name__)
CORS(app)  # Allows your website to connect to the chatbot

chat_history = []  # Store conversation history

@app.route("/chat", methods=["POST"])
def chat():
    user_input = request.json.get("message")

    if not user_input:
        return jsonify({"error": "No message provided"}), 400

    # Append user message to history
    chat_history.append({"role": "user", "content": user_input})

    try:
        # ✅ Using Ollama for AI response
        response = ollama.chat(model="mistral", messages=chat_history)

        ai_reply = response["message"]["content"]  # ✅ FIXED INDENTATION

        # Append AI response to chat history
        chat_history.append({"role": "assistant", "content": ai_reply})

        return jsonify({"response": ai_reply})

    except Exception as e:
        return jsonify({"error": str(e)}), 500

if __name__ == "__main__":
    app.run(host="0.0.0.0", port=5001, debug=True)  # ✅ Runs on all IPs
